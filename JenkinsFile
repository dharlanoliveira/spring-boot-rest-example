node('swarm') {

    currentBuild.result = "SUCCESS"

    try {

       stage 'Git'

            checkout scm


       stage 'Build Projeto'

            parallel (
                cliente: { node {
                    sh "echo building on windows now"
                }},
                servico: { node {
                    sh 'chmod a+x build.sh'
                    sh './build.sh'
                }}
            )

    } catch (er) {

        currentBuild.result = "FAILURE"

        mail body: "project build error: ${er}" ,
        from: 'xxxx@yyyy.com',
        replyTo: 'yyyy@yyyy.com',
        subject: 'project build failed',
        to: 'zzzz@yyyyy.com'

        throw er
    }

}