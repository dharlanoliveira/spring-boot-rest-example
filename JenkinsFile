node('swarm') {

    currentBuild.result = "SUCCESS"

    try {

       stage 'Git'

            checkout scm


       stage 'Build Projeto'
            sh 'chmod a+x build.sh'
            sh './build.sh'

    } catch (er) {

        currentBuild.result = "FAILURE"

        mail body: "project build error: ${er}" ,
        from: 'xxxx@yyyy.com',
        replyTo: 'yyyy@yyyy.com',
        subject: 'project build failed',
        to: 'zzzz@yyyyy.com'

        throw er
    }

}