node('swarm') {

    currentBuild.result = "SUCCESS"

    try {
        stage "Build do projeto"
        def branches = [:]
        branches["cliente"] = {
                stage "Stage build do cliente"
                    node('swarm') {
                        checkout scm
                        echo  'Starting sleep'
                        sleep 10
                        echo  'Finished sleep'
                    }
            }

        branches["servico"] = {
                stage "Stage build do servi√ßo"
                    node('swarm') {
                        checkout scm
                        sh 'chmod a+x build.sh'
                        sh './build.sh'
                    }
            }

        parallel branches

    } catch (er) {

        currentBuild.result = "FAILURE"

        mail body: "project build error: ${er}" ,
        from: 'xxxx@yyyy.com',
        replyTo: 'yyyy@yyyy.com',
        subject: 'project build failed',
        to: 'zzzz@yyyyy.com'

        throw er
    }

}